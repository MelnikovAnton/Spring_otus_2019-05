<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean name="questionService" class="ru.otus.hw1.services.impl.QuestionServiceImpl">
        <constructor-arg index="0" ref="questionDao"/>
        <constructor-arg index="1" ref="answerDao"/>
    </bean>
    <bean name="questionDao" class="ru.otus.hw1.dao.QuestionDaoImpl">
        <constructor-arg index="0" value="questions.csv"/>
    </bean>

    <bean name="answerDao" class="ru.otus.hw1.dao.AnswerDaoImpl">
        <constructor-arg value="answers.csv"/>
    </bean>

</beans>